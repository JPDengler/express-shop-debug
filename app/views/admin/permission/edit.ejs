<div class="container">
	<!-- new permission header -->
	<div class="row w-100">
		<div class="col-12 col-lg-6"><h3>ویرایش اجازه دسترسی "<%= permission.name%>"</h3></div>
		<div class="col-12 col-lg-6 text-center">
			<a type="button" class="btn btn-primary ms-auto btn-sm" href="/admin/users/permissions">بخش اجازه دسترسی</a>
		</div>
	</div>
	<!-- edit a permission form start -->
	<div class="row w-100">
		<form method="POST" action="/admin/users/permissions/<%= permission._id %>/edit?_method=PUT" class="col-12 col-lg-8 offset-lg-2">
			<input type="hidden" name="id" value="<%= permission._id %>">
			<div class="row mbn-20">
				<!-- name  -->
				<div class="col-12 mb-20">
					<label class="mb-2 mt-4" for="editPermissionName">نام</label>
					<input
						autofocus
						type="text"
						id="editPermissionName"
						class="form-control"
						dir="ltr"
						name="name"
						required="true"
						value="<%- permission.name ?? old?.name ?? '' %>"
					/>
				</div>
				<!-- label -->
				<div class="form-group mt-3">
					<label for="editPermissionLable" class="control-label mb-2">توضیح</label>
					<input
						id="editPermissionLable"
						type="text"
						class="form-control"
						name="label"
						required="true"
						value="<%= permission.label ?? old?.label %>"
					/>
				</div>
				<!--  -->
				<div class="d-grid mt-4">
					<button class="btn btn-primary btn-sm">ایجاد</button>
				</div>
			</div>
		</form>
	</div>
	<!-- create a new permission form end -->
</div>
