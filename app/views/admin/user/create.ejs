<div class="container">
		<!-- new user header -->
		<div class="row w-100">
			<div class="col-12 col-lg-6"><h3>ایجاد کاربر جدید</h3></div>
			<div class="col-12 col-lg-6 text-center">
				<a type="button" class="btn btn-primary ms-auto btn-sm" href="/admin/users">کاربران</a>
			</div>
		</div>
			<!-- create a new course form start -->
	<div class="row w-100">
		<form method="POST" action="/admin/users/new" class="col-12 col-lg-8 offset-lg-2">
			<div class="row mbn-20">
				<!-- email  -->
				<div class="col-12 mb-20">
					<label class="mb-2 mt-4" for="newUserEmail">ایمیل</label>
					<input
						autofocus
						type="email"
						id="newUserEmail"
						class="form-control"
						name="email"
						required="true"
						value="<%- old?.title ?? '' %>"
						inputmode="email"
					/>
				</div>
				<!-- password -->
				<div class="form-group mt-3">
					<label for="password" class="control-label mb-2">رمز عبور</label>
					<input
						id="password"
						type="password"
						class="form-control"
						name="password"
						required="true"
					/>
				</div>
				<!--  -->
				<div class="d-grid mt-4">
					<button class="btn btn-primary btn-sm">ایجاد</button>
				</div>
			</div>
		</form>
	</div>
	<!-- create a new course form end -->
</div>
