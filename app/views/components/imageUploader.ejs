<section id="fileUploader" class="d-flex flex-column justify-content-center align-items-center col-12 mx-auto mt-3">
	<i class="zmdi zmdi-cloud-upload zmdi-hc-3x text-primary"></i>
	<p id="uploaderText" class="mt-3 mb-3">عکس را داخل باکس بندازید</p>
	<span class="mb-3">یا</span>
	<button id="uploadButton" type="button" class="border-0 p-2 rounded btn btn-primary text-white btn-sm">
		انتخاب فایل
	</button>
	<div class="input-group">
		<input accept=".jpg,.jpeg,.png,.webp,.avif" name="image" type="file" id="fileInput" hidden class="form-control" />
	</div>
	<p class="form-text mt-3">پسوند های قابل قبول : jpg ، png ، webp ، avif</p>
</section>

<script src="/static/components/ImageUploader/js/imageUploader.js"></script>
