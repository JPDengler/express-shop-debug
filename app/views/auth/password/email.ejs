<!-- form start -->
<div class="container">
	<div class="row pt-5 justify-content-center">
		<div class="col-12 col-lg-4">
			<form
				class="form-horizontal"
				method="POST"
				action="/auth/password/email"
				autocomplete="off"
			>
				<div class="form-group mt-3">
					<label for="email" class="control-label mb-2">ایمیل</label>
					<input
						dir="rtl"
						id="email"
						type="email"
						class="form-control"
						name="email"
						required="true"
						inputmode="email"
					/>
				</div>
				<p class="form-text">برای مثال : backendwithali@gmail.com</p>

				<div class="form-group mt-3"><%- captcha %></div>

				<div class="form-group mt-3 d-grid">
					<button disabled type="submit" class="btn btn-primary submitButton">
						تغییر رمز عبور
					</button>
				</div>
			</form>
		</div>
	</div>
</div>
<!-- form end -->
