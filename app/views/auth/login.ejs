<!-- form start -->
<div class="container">
	<div class="row pt-5 justify-content-center">
		<div class="col-12 col-lg-4">
			<% if(messages.length > 0) { %>
			<div class="alert alert-danger alert-dismissible">
				<button
					type="button"
					class="btn-close btn-danger position-absolute top-0 end-0"
					aria-label="Close"
				></button>
				<ul>
					<% messages.forEach(error => { %>
					<li><%= error %></li>
					<% }) %>
				</ul>
			</div>
			<% } %>
			<form
				class="form-horizontal"
				method="POST"
				action="/auth/login"
				autocomplete="off"
			>
				<div class="form-group mt-3">
					<label for="email" class="control-label mb-2">ایمیل</label>
					<input
						dir="rtl"
						id="email"
						type="email"
						class="form-control"
						name="email"
						required="true"
						inputmode="email"
					/>
				</div>
				<p class="form-text">برای مثال : backendwithali@gmail.com</p>

				<div class="form-group mt-3">
					<label for="password" class="control-label mb-2">رمز عبور</label>
					<input
						autocomplete="current-password"
						id="password"
						type="password"
						class="form-control"
						name="password"
						required="true"
					/>
					<p class="form-text">
						<a href="auth/password/reset" class="link-underline-primary"
							>فراموش کرده اید؟</a
						>
					</p>
				</div>

				<div class="form-check">
					<input
						class="form-check-input"
						type="checkbox"
						value="true"
						id="flexCheckDefault"
						name="remember"
					/>
					<label class="form-check-label text-14" for="flexCheckDefault">
						من را به خاطر بسپار
					</label>
				</div>

				<div class="form-group mt-3"><%- captcha %></div>

				<p class="text-center mt-3 link-underline-opacity-0">
					<span> حساب کاربری ندارید؟ </span>
					<a class="link-underline-opacity-0" href="/auth/register">
						ثبت نام
					</a>
				</p>

				<div class="form-group mt-3 d-grid">
					<button disabled type="submit" class="btn btn-primary submitButton">
						ورود
					</button>
					<p class="text-center mt-3">یا</p>
					<a href="/login/google" class="btn btn-danger">ورود با اکانت گوگل</a>
				</div>
			</form>
		</div>
	</div>
</div>
<!-- form end -->
