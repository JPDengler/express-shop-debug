<div class="row mt-5 g-4">
	<section class="col-12 col-lg-6">
		<% if (data.learning.length > 0) { %>
			<div class="d-flex align-items-center latest-courses-wrap p-4 rounded-4">
				<h3 class="fs-6">اخیرا خریداری شده</h3>
				<a style="color: #4E81FB; background-color: #2C3251; font-size: 10px;" class=" p-3 rounded-4 ms-auto" href="/me/tickets"><span class="me-2">مشاهده همه دوره ها</span>
					<svg width="15" height="7" viewBox="0 0 23 15" fill="#4E81FB" xmlns="http://www.w3.org/2000/svg">
