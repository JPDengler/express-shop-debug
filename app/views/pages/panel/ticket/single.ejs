<div class="row mt-4">
	<section class="col-12 rounded-4 p-4" style="background-color: #28293d">
		<h1 class="fs-3"><%= ticket.title %></h1>
		<hr />
		<section class="tickets-wrapper w-100 ">
			<div class="row d-flex flex-column">
				<!-- sender ticket -->
				<div class="ticket-sender col-10 d-flex flex-column p-4 rounded-3 m-3">
					<p class="mb-0 fw-bold fs-4 text-white"><%= ticket.sender.name %></p>
					<div class="d-flex">
						<span class="fs-14px"><%= date(ticket.createdAt).format('jD jMMMM jYYYY') %></span>
						<span class="fs-14px d-inline-block ms-2"><%= date(ticket.createdAt).format('H:m') %></span>
					</div>
					<div class="mt-3 text-white"><%- ticket.body %></div>
				</div>
				<% if (ticket.answers.length > 0) { %>
						<% answers.forEach(answer => { %>
							<!-- answer ticket -->
							<div dir="ltr" class="ticket-reciever col-10 d-flex flex-column p-4 rounded-3 m-3 me-auto">
								<p class="mb-0 fw-bold fs-4 text-white"><%= ticket.sender.name %></p>
								<div class="d-inline-flex ms-auto">
									<span dir="rtl" class="fs-14px d-inline-block ms-2"><%= date(ticket.createdAt).format('H:m') %></span>
									<span dir="rtl" class="fs-14px"><%= date(ticket.createdAt).format('jD jMMMM jYYYY') %></span>
								</div>
								<div dir="rtl" class="mt-3 text-white"><%- ticket.body %></div>
							</div>
							<!-- answer ticket -->
						<% }) %>
				<% } %>
			</div>
		</section>
	</section>
</div>
